@page "/useroverview"

<h1 class="page-title">All Users</h1>

@if (Users == null)
{
    <p><em>Loading...</em></p>
} else
{
    <table>
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <a href="@($"userdetail/{user.Id}")" class="btn btn-primary table-btn">
                            Detail
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}