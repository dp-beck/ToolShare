@page "/user-detail/{Username}"
@if (!_isLoading)
{
    <MudText Typo="Typo.h3" Align="Align.Center" Class="mt-4">User Detail: @Username</MudText>
    
    <MudContainer MaxWidth="MaxWidth.Small" Class="mt-4">
        <MudPaper Width="100%" Class="pa-4">
            <MudImage Src="@UserInfo.ProfilePhotoUrl"
                      Alt="Profile photo of User"
                      Width="150"
                      Class="rounded-circle"/>
            <MudText Typo="Typo.h6" Class="mt-4">First Name: @UserInfo.FirstName</MudText>
            <MudText Typo="Typo.h6">Last Name: @UserInfo.LastName</MudText>
            <MudText Typo="Typo.h6">Email: @UserInfo.Email</MudText>
            <MudText Typo="Typo.h6">About Me: @UserInfo.AboutMe</MudText>
        </MudPaper>
    </MudContainer>
    
     
}
