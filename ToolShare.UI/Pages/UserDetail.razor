@page "/user-detail/{Username}"
@if (!_isLoading)
{
    <MudText Typo="Typo.h3" Align="Align.Center" Class="mt-4">User Detail: @Username</MudText>
    
    <MudContainer MaxWidth="MaxWidth.Small" Class="mt-4">
        <MudPaper Width="100%" Class="pa-4">
            <MudImage Src="@UserInfo.ProfilePhotoUrl"
                      Alt="Profile photo of User"
                      Width="150"
                      Class="rounded-circle"/>
            <MudText Typo="Typo.body1" Class="mt-4"><strong>First Name:</strong> @UserInfo.FirstName</MudText>
            <MudText Typo="Typo.body1"><strong>Last Name:</strong> @UserInfo.LastName</MudText>
            <MudText Typo="Typo.body1"><strong>Email:</strong> @UserInfo.Email</MudText>
            <MudText Typo="Typo.body1"><strong>About Me:</strong> @UserInfo.AboutMe</MudText>
        </MudPaper>
    </MudContainer>
    
     
}
