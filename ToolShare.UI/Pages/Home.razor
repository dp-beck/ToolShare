@page "/"
@using ToolShare.UI.Identity
@using ToolShare.UI.Components

@inject IAccountManagement Acct

<PageTitle>Tool Share - Home</PageTitle>

<MudContainer>
    <AuthorizeView Roles="NoPodUser">
        <MudText Typo="Typo.h2">Welcome to Tool Share, @context.User.Identity?.Name!</MudText>
        <HomeNoPodUser/>
    </AuthorizeView>

    <AuthorizeView Roles="User">
        <MudText Typo="Typo.h2">Welcome Back, @context.User.Identity?.Name!</MudText>
        <HomeUser/>
    </AuthorizeView>
</MudContainer>