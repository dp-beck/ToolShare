@if (CurrentPod.PodMembers is not null)
{
    <MudList T="string">
        <MudListSubheader>Pod Members</MudListSubheader>
        @foreach (var user in CurrentPod.PodMembers)
        {
            <MudListItem>
                <AvatarContent>
                    <MudAvatar>
                        <MudImage Src="@user.ProfilePhotoUrl"/>
                    </MudAvatar>
                </AvatarContent>
                <ChildContent>
                    <MudLink Href="@($"user-detail/{user.UserName}")">@user.UserName</MudLink>
                </ChildContent>
            </MudListItem>
        }
        
        <AuthorizeView Roles="User">
            <Authorized>
                <MudDivider/>
                <MudListItem Text="Add Tool" Icon="@Icons.Material.Filled.Add" Href="add-tool"/>
                <MudListItem Text="Manage Tools" Icon="@Icons.Material.Filled.Settings" Href="manage-tools"/>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="PodManager">
            <Authorized>
                <MudDivider/>
                <MudListItem Text="Manage Pod" Icon="@Icons.Material.Filled.Settings" Href="@($"manage-pod/{CurrentPod.PodId}")"/>
            </Authorized>
        </AuthorizeView>
    </MudList>    
}
