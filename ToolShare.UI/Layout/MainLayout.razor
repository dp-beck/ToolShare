@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>    
    <AuthorizeView Roles="User,PodManager">
        <Authorized>
            <MudDrawer @bind-Open="@_drawerOpen" Color="Color.Surface">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6" Color="Color.Dark">Tool Share</MudText>
                </MudDrawerHeader>
                <MudDrawerContainer>
                    <SideBar/>    
                </MudDrawerContainer>
               
            </MudDrawer>
         </Authorized> 
    </AuthorizeView>
    
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudLink Href="/" Color="Color.Inherit">
            <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Title="Home"/>
        </MudLink>
        
        <MudLink Href="/current-user" Color="Color.Inherit">
            <MudIconButton Icon="@Icons.Material.Filled.ManageAccounts" Color="Color.Inherit" Title="Manage User Details"/>
        </MudLink>

        <MudLink Href="/logout" Color="Color.Inherit">
            <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Title="Logout" />
        </MudLink>
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>
    
</MudLayout>